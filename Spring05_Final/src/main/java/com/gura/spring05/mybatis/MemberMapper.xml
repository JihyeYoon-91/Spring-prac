<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">
	<select id="getList" 
	resultType="com.gura.spring05.member.dto.MemberDto">
		SELECT num,name,addr
		FROM member
		ORDER BY num ASC
	</select>
	<delete id="delete" parameterType="int">
		DELETE FROM member
		WHERE num=#{num}  <!-- #{num}에서의 num은 아무거나 적어도 된다. 알아서 파라미터값을 가져온다. -->
	</delete>
	<insert id="insert" parameterType="com.gura.spring05.member.dto.MemberDto">
		INSERT INTO member
		(num,name,addr)
		VALUES(member_seq.NEXTVAL,#{name},#{addr}) <!-- 반드시 dto필드명과 같에 작성해야한다. -->
	</insert>
</mapper>
